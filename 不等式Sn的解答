#include<stdio.h>

int main()
{
	int k;
	printf("求Sn = 1 + (1 / 2) + (1 / 3) + ...+ (1 / n) > k时n的值为？\n");
	printf("请输入一个1 - 15的整数（k）：");
	scanf("%d",&k);

	if (k < 1 || k >= 15) {
		printf("错误！请重新输入！");
		return 1;
	}

	else {
		float Sn = 0;
		int n;
		for (n = 1; Sn <= k; n++) {
			Sn = Sn + (1.0 / n);
		}
		printf("Sn > k时最小的整数n为： %d",n - 1);
	}

	return 0;
}
