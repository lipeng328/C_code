#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>

int Factorial(int x)
{
	int y;

	if (x == 1) {
		return 1;
	}
	else {
		y = Factorial(x - 1);
		return x * Factorial(x - 1);
	}
}

int main()
{
	int n, result = 1;
	printf("求一个数的阶乘:\n");
	scanf("%d", &n);

	for (int i = 1; i <= n; i++) {
		result = result * i;
	}

	printf("%d = %d\n", result, Factorial(n));
}
