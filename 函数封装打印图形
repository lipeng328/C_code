#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>

int i;

void func1();
void func2();

int main()
{
	func1();
	func2();

	return 0;
}

void func1(){
	for (i = 1; i <= 5; i += 2) {
		for (int m = 0; m < 2 - i / 2; m++) {
			printf(" \t");
		}
		for (int j = 0; j < i; j++) {
			printf("*\t");
		}
		printf("\n");
	}
}

void func2() {
	for (i = 1; i <= 3; i += 2) {
		for (int m = 0; m < (i + 1) / 2; m++) {
			printf(" \t");
		}
		for (int j = 0; j < 4 - i % 4; j++) {
			printf("*\t");
		}
		printf("\n");
	}
}
