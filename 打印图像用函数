#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>

void func1(int x);
void func2(int x);
void func3(int x);
void func4(int x);

int main()

{
	int a, b;
	printf("please enter integer to print:\n");
	scanf("%d", &a);
	printf("please enter a integer to decide stories:\n");
	scanf("%d", &b);

	if (b < 3) {
		printf("error\n");
	}
	else {
		switch (a) {
			case 1:
				func1(b);	break;
			case 2:
				func2(b);	break;
			case 3:
				func3(b);	break;
			case 4:
				func4(b);	break;
			default:
				printf("error\n");
		}
	}

	return 0;
}

void func1(int x) {
	for (int i = 0; i < x; i++) {
		for (int m = 0; m < x - i - 1; m++) {
			printf(" ");
		}
		for (int n = 0; n < 2 * i + 1; n++) {
			printf("*");
		}
		printf("\n");
	}
}

void func2(int x) {
	for (int i = 0; i < x; i++) {
		for (int j = 0; j < 7; j++) {
			printf("*");
		}
		printf("\n");
	}
}

void func3(int x) {
	for (int i = 0; i < x; i++) {
		for (int m = 0; m < i;m++) {
			printf(" ");
		}
		for (int n = 0; n < 7; n++) {
			printf("*");
		}
		printf("\n");
	}
}

void func4(int x) {
	if (x % 2 == 0) {
		printf("error\n");
	}
	else {
		for (int i = 0; i < x / 2 + 1; i++) {
			if (i == x / 2) {
				continue;
			}
			for (int m = 0; m < x / 2 - i; m++) {
				printf(" ");
			}
			for (int n = 0; n < 2 * i + 1; n++) {
				printf("*");
			}
			printf("\n");
		}

		for (int j = 1; j < x; j++) {
			for (int p = 0; p < j - 1; p++) {
				printf(" ");
			}
			for (int q = 0; q < x - 2 * j + 2; q++) {
				printf("*");
			}
			printf("\n");
		}
	}
}
