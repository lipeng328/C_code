#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>

int main()
{
	int year, month;
	printf("请输入年月：");
	scanf("%d %d", &year, &month);

	if (month < 1 || month > 12) {
		printf("错误！请重新输入!");
	}

	else if (month != 2) {
		switch (month) {
		case 1:
		case 3:
		case 5:
		case 7:
		case 8:
		case 10:
		case 12:
			printf("该月有31天");
			break;
		case 4:
		case 6:
		case 9:
		case 11:
			printf("该月有30天");
		}
	}
	else {
		if (year % 4) {
			printf("该年是平年，2月有28天");
		}
		else {
			printf("该年是闰年，2月有29天");
		}
	}

	return 0;
}
