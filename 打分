#include<stdio.h>

int main()
{
    int a, b,   max = 0,    min = 0;
    scanf("%d", &a);
    int arr[1000] = { 0 };
    for (int i = 0; i < a; i++) {
        scanf("%d", &arr[i]);
    }

    for (int m = 0; m < 11; m++) {
        for (int p = 0; p < a; p++) {
            if (m == arr[p]) {
                max = arr[p];
                break;
            }
        }
    }
    for (int n = 10; n > -1; n--) {
        for (int q = 0; q < a; q++) {
            if (n == arr[q]) {
                min = arr[q];
                break;
            }
        }
    }
    b = 0;
    for (int k = 0; k < a; k++) {
        b = b + arr[k];
    }
    double result = (b - max - min) * 1.0 / (a - 2);

    printf("%.2lf", result);

    return 0;
}
