#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>

int main()
{
    int sum, degree;
    scanf("%d", &sum);
    degree = sum - 150;
    double money;

    if (sum > 10000 || sum < 0) {
        printf("错误");
        return 1;
    }
    else {
        if (degree <= 0) {
            money = sum * 0.4463;
        }
        if (degree > 0 && degree <= 250) {
            money = 150 * 0.4463 + (sum - 150) * 0.4663;
        }
        else {
            money = 150 * 0.4463 + 250 * 0.4663 + (sum - 400) * 0.5663;
        }
    }
    printf("%.1lf", money);

    return 0;
}
