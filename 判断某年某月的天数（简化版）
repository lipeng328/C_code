#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>

int main()
{
	int year, month;
	int days[] = {31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31};
	printf("请输入年月:");
	scanf("%d %d", &year, &month);

	if (month < 1 || month > 12 || year ==0) {
		printf("错误");
		return 1;
	}
	else {
		if (year % 4 == 0) {
			days[1] = 29;
		}
		printf("%d年%d月有%d天\n", year, month, days[month - 1]);
	}

	return 0;
}
